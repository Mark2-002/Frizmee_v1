#include <dt-bindings/led/led.h>

/ {
	aliases {
		// i2c0 = &i2c20;
		i2c1 = &i2c21;
		i2c2 = &i2c22;
		adc0 = &adc;
	};
	buttons{

		button0: button_0 {
			gpios = <&gpio1 4 (GPIO_PULL_DOWN | GPIO_ACTIVE_LOW)>;
			label = "Push button 0";
			zephyr,code = <INPUT_KEY_0>;
		};
	};
	zephyr,user {
		io-channels = <&adc 1>;
	};

};
// &gpio0 {
//     sense-edge-mask = <(1 << 4)>; 
// };

&adc {


	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	channel@1 {
		reg = <1>;
		zephyr,gain = "ADC_GAIN_1_4";
		zephyr,reference = "ADC_REF_INTERNAL";
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,input-positive = <NRF_SAADC_AIN5>; /* P1.01 */
		zephyr,resolution = <12>;
		zephyr,oversampling = <8>;
	};
};

// &nfct {
	//     status = "okay";
	//     memory-regions = <&cpuapp_dma_region>;
// };
&uart20 {
	status = "disabled";
};
&wdt31 {
    status = "okay";
	label="wdt31";
};

&i2c21 {
	status = "okay";
	pinctrl-0 = <&i2c21_default>;
	pinctrl-1 = <&i2c21_sleep>;
	pinctrl-names = "default", "sleep";
};
&spi00 {
	status = "okay";
	cs-gpios = <&gpio2 5 GPIO_ACTIVE_LOW>;
	pinctrl-0 = <&spi00_default>;
	pinctrl-1 = <&spi00_sleep>;
	pinctrl-names = "default", "sleep";
	label = "spi00";
	ws2812: ws2812@0 {
		compatible = "worldsemi,ws2812-spi";
		reg = <0>;
		spi-max-frequency = <4000000>;
		chain-length = <8>;
		color-mapping = <LED_COLOR_ID_GREEN>,
		                <LED_COLOR_ID_RED>,
		                <LED_COLOR_ID_BLUE>;
		spi-one-frame = <0xE>;
		spi-zero-frame = <0x8>;
		status = "okay";
	};
