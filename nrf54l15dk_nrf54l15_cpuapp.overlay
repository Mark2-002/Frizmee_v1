	i2c21_default: i2c21_default {
		group1 {
			psels = <NRF_PSEL(TWIM_SCL, 1, 8)>, <NRF_PSEL(TWIM_SDA, 1, 7)>;
		};
	};

	i2c21_sleep: i2c21_sleep {
		group1 {
			psels = <NRF_PSEL(TWIM_SCL, 1, 8)>, <NRF_PSEL(TWIM_SDA, 1, 7)>;
		};
	};
